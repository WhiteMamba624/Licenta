<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gligamihai.licenta">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Licenta">
        <activity
            android:name=".licenta.ui.WeatherActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".licenta.ui.UpdateDocumentActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".licenta.ui.DocumentInfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".licenta.ui.AddDocumentActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".licenta.ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".licenta.ui.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".licenta.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".licenta.ui.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>